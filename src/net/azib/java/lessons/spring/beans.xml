<?xml version="1.0"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	   
	<bean id="net.azib.java.lessons.db.PersonDAO" class="net.azib.java.lessons.spring.JDBCPersonDAO">
		<property name="jdbcOperations" ref="jdbcOps"/>
	</bean>	
	
	<bean id="jdbcOps" class="org.springframework.jdbc.core.JdbcTemplate" autowire="byType"/>
	
	<bean id="datasource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="url" value="jdbc:hsqldb:mem:DemoDB"/>
		<property name="username" value="sa"/>
		<property name="password" value=""/>
	</bean>
</beans>
