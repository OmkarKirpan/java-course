<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="net.azib.java.lessons.spring.Student" table="users">
		<id name="id" access="field"/>
		<property name="name"/>
		<property name="studentCode"/>
	</class>
	
	<query name="Student.getByStudentCode">
		from Student where studentCode = :studentCode
	</query>
		
</hibernate-mapping>
