<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class
		name="net.azib.java.students.t030633.homework.view.in.hibernate.athletes.HibAthlete"
		table="athletes">
		<id name="id" column="ID">
			<generator class="native" />
		</id>
		<property name="name" />
		<property name="dob" type="date" />
		<property name="country" column="COUNTRY_CODE" />

		<set name="results" table="results">
			<key column="athlete_id" />
			<one-to-many
				class="net.azib.java.students.t030633.homework.view.in.hibernate.results.HibResult" />
		</set>

	</class>


</hibernate-mapping>