<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class
		name="net.azib.java.students.t030633.homework.view.in.hibernate.results.HibResult"
		table="results">
		<id name="id" column="ID">
			<generator class="native" />
		</id>
		<property name="athlete_id" insert="false" update="false" />
		<property name="competition_id" insert="false" update="false" />

		<property name="race_100m" />
		<property name="long_jump" />
		<property name="shot_put" />
		<property name="high_jump" />
		<property name="race_400m" />
		<property name="hurdles_110m" />
		<property name="discus_throw" />
		<property name="pole_vault" />
		<property name="javelin_throw" />
		<property name="race_1500m" />

		<many-to-one name="athlete"
			class="net.azib.java.students.t030633.homework.view.in.hibernate.athletes.HibAthlete"
			column="athlete_id" />
		<many-to-one name="competition"
			class="net.azib.java.students.t030633.homework.view.in.hibernate.competitions.HibCompetition"
			column="competition_id" />

	</class>

</hibernate-mapping>