<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class
		name="net.azib.java.students.t030633.homework.view.in.hibernate.competitions.HibCompetition"
		table="competitions">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="country_code" />
		<property name="date" type="date" />
		<property name="name" />
		<property name="location" />
		
		<set name="results" table="results">
			<key column="competition_id" />
			<one-to-many
				class="net.azib.java.students.t030633.homework.view.in.hibernate.results.HibResult" />
		</set>
		
	</class>


</hibernate-mapping>