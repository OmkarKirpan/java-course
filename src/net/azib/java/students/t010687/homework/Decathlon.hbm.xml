	-->
	
	<class name="net.azib.java.students.t010687.homework.Athlet" table="athletes">
		<id name="id" access="field"/>
		<property name="name"/>
		<property name="dateOfBirth" column="dob" type="date" access="field"/>
		<property name="country" column="country_code"/>
    	<joined-subclass name="net.azib.java.students.t010687.homework.ResultsOfTheAthlet" table="results">
         	<key column="athlete_id"/>
         	<property name="Sprint_100m" column="race_100m" type="float" access="field"/>
         	<property name="LongJump" column="long_jump" type="float" access="field"/>
         	<property name="ShotPut" column="shot_put" type="float" access="field"/>
         	<property name="HighJump" column="high_jump" type="float" access="field"/>
         	<property name="Sprint_400m" column="race_400m" type="float" access="field"/>
         	<property name="Hurdles_110m" column="hurdles_110m" type="float" access="field"/>
         	<property name="DiscusThrow" column="discus_throw" type="float" access="field"/>
         	<property name="PoleVault" column="pole_vault" type="float" access="field"/>
         	<property name="JavelinThrow" column="javelin_throw" type="float" access="field"/>
         	<property name="Race_1500m" column="race_1500m" type="float" access="field"/>
    	</joined-subclass>
	</class>
	<class name="net.azib.java.students.t010687.homework.Competition" table="competitions">
		<id name="id" access="field"/>
		<property name="country_code" column="country_code" type="string" access="field"/>
		<property name="date" column="date" type="date" access="field"/>
		<property name="description" column="description" type="string" access="field"/>
	</class>
	
	<query name="Decathlon.getCompetition_id">
		from ResultsOfTheAthlet where competition_id = :competition_id
	</query>
	
	<query name="Decathlon.getCompetitions">
		from Competition where id > :zero
	</query>
	
		
</hibernate-mapping>
