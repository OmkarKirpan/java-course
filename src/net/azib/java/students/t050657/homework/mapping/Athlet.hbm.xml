<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="src.Athlet" table="athletes">
	
		<id name="id" type="integer" column="id">
			<generator class="increment"/>
		</id>
		
		<map name="participateIn" table="results" cascade="all">
			<key column="athlete_id"/>
			<index column="id" type="integer"/>
			<many-to-many column="competition_id" class="Competition"/>
		</map>
		
		<property name="name" type="string"/>
		<property name="dateOfBirth" type="date" column="dob"/>
		<property name="countryCode" type="string" column="country_code"/>
		
	</class>
	
</hibernate-mapping>