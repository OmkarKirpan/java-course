<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
          
<hibernate-mapping>

	<class name="net.azib.java.students.t050657.homework.src.model.Athlet"
		   table="athletes">
		<id name="id" access="field">
			<generator class="increment"/>
		</id>
		<property name="name"/>
		<property name="dateOfBirth" type="date" column="dob"/>
		<property name="countryCode" column="country_code"/>
		
		<one-to-one name="Result"
					class="net.azib.java.students.t050657.homework.src.model.Result"/>
	</class>
	
	<class name="net.azib.java.students.t050657.homework.src.model.Result"
		   table="results" 
		   lazy="true">
		<id name="id" access="field">
			<generator class="increment"/>
		</id>
		<property name="race100" column="race_100m"/>
		<property name="longJump" column="long_jump"/>
		<property name="shotPut" column="shot_put"/>
		<property name="highJump" column="high_jump"/>
		<property name="race400" column="race_400m"/>
		<property name="hurdles" column="hurdles_110m"/>
		<property name="discusThrow" column="discus_throw"/>
		<property name="poleVault" column="pole_vault"/>
		<property name="javelinThrow" column="javelin_throw"/>
		<property name="race1500" column="race_1500m"/>
	</class>

	
	<class name="net.azib.java.students.t050657.homework.src.model.Competition" 
		   table="competitions">
		<id name="id" access="field">
			<generator class="increment"/>
		</id>
		<property name="countryCode" column="country_code"/>
		<property name="eventDate" type="date" column="date"/>
		<property name="description"/>
		
		<set name="athlets" table="results">
			<key column="competition_id"/>
            <many-to-many class="net.azib.java.students.t050657.homework.src.model.Athlet" 
            			  column="athlete_id"/>
		</set>
	</class>
	
	<query name="Competition.getByDescription">
		from Competition where description = :description 
						   and countryCode = :countryCode
						   and date = :date
	</query>
	
</hibernate-mapping>