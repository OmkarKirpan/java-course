<?xml version="1.0" standalone="yes"?>
<xs:schema id="competition" xmlns="" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="competition">
    <xs:complexType>
      <xs:choice minOccurs="0" maxOccurs="unbounded">
        <xs:element name="athlete">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="name" type="xs:string" />
              <xs:element name="country" type="xs:string" />
              <xs:element name="birthdate" type="xs:string" />
              <xs:element name="results">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="result" maxOccurs="unbounded">
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element name="event" type="xs:string" />
                          <xs:element name="performance" type="xs:decimal" />
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
              <xs:element name="score" type="xs:integer" />
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:choice>
    </xs:complexType>
  </xs:element>
</xs:schema>